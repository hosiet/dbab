#!/bin/sh

##-----------------------------------------------------------------------
## Porgram: dbab-add-list
## Purpose: Add your own entries to dnsmasq blocking list
## Authors: Tong Sun (c) 2013
## License: BSD license
##-----------------------------------------------------------------------

dbab_list=/etc/dbab.list+
dbabsvr_addr=`cat /etc/dbab.addr`

# Add the trash-sites to DNSmasq blocking
sed 's#^.*$#'"address=/&/$dbabsvr_addr#" $dbab_list > /etc/dnsmasq.d/dnsmasq.trashsites.conf
echo File /etc/dnsmasq.d/dnsmasq.trashsites.conf updated.
