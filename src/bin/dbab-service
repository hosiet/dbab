#! /bin/sh
# /etc/init.d/dbab-service
#

# Carry out specific functions when asked to by the system
case "$1" in
   start)
     echo "Starting dbab pixel server"
     /usr/sbin/dbab-pixelserv &
     ;;
   stop)
     echo "Stopping dbab pixel server"
     killall dbab-pixelserv
     ;;
   restart)
     echo "Restarting dbab pixel server"
     $0 stop
     $0 start
     ;;
   *)
     echo "Usage: /etc/init.d/dbab-service {start|stop|restart}"
     exit 1
     ;;
esac

exit 0
